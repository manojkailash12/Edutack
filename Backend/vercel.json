{
  "version": 2,
  "name": "edutrack-backend",
  "builds": [
    {
      "src": "api.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "routes/**",
          "controllers/**",
          "models/**",
          "services/**",
          "config/**",
          "middleware/**",
          "utils/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api.js"
    }
  ],
  "functions": {
    "api.js": {
      "maxDuration": 30
    }
  }
}